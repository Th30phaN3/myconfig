set autoindent
set backup
set backupdir ~/.local/share/nano_backup
set casesensitive
set cutfromcursor
set historylog
set nonewlines
set positionlog
set softwrap
set suspend
set tabsize 4
set tabstospaces
set titlecolor green,black
set trimblanks
