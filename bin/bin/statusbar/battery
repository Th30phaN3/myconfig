#!/bin/bash
#
# Display battery level and shows info with right click.
# Take a battery name (e.g. BAT0) as an argument.

# Get xresources colors
for x in "$(xrdb -query | grep "*.color" | sed "s/.*\./export /g;s/:\s*/=\"/g;s/$/\"/g")"; do eval "$x"; done

case $BLOCK_BUTTON in
    3) notify.sh "Help:" ": discharging<br>: stagnant charge<br>: charging<br>: charged" ;;
esac

CAPACITY=$(cat /sys/class/power_supply/"$1"/capacity) || exit
STATUS=$(cat /sys/class/power_supply/"$1"/status)

if [ "$CAPACITY" -ge 75 ]; then
  COLOR="$color4"
elif [ "$CAPACITY" -ge 50 ]; then
  COLOR="$color6"
elif [ "$CAPACITY" -ge 20 ]; then
  COLOR="$color3"
else
  COLOR="$color1"
  [ "$STATUS" != "Charging" ] && notify.sh "Battery level low !" "" "" "critical"
fi

[ "$STATUS" = "Charging" ] && COLOR="$color7"

ICONSTATUS=$(echo "$STATUS" | sed -e 's/,//g;s/Discharging//;s/Charging//;s/Unknown//;s/Full//;s/ 0*/ /g;s/ :/ /g')

printf "<span color='%s'>%s %s</span>" "$COLOR" "$ICONSTATUS" "$CAPACITY%"