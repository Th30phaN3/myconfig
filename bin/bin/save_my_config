#!/bin/sh
CURRENTDIR=${PWD}
echo Repository ? ($CURRENTDIR by default)
read REPONAME
REPONAME=${REPONAME:-${CURRENTDIR}}

mkdir -p $REPONAME/bin
mkdir -p $REPONAME/i3

cp ~/.xbindkeysrc $REPONAME
cp ~/.Xresources $REPONAME
cp ~/.asoundrc $REPONAME
cp ~/.bash_profile $REPONAME
cp ~/.bashrc $REPONAME
cp ~/.nanorc $REPONAME
cp ~/.atom/config.cson $REPONAME
cp ~/.home.html $REPONAME
cp ~/.dircolors $REPONAME
cp ~/bin/* $REPONAME/bin

cp ~/.config/*.json $REPONAME
cp ~/.config/redshift.conf $REPONAME
cp ~/.config/compton/compton.conf $REPONAME
cp ~/.config/gtk-3.0/gtk.css $REPONAME
cp ~/.config/htop/htoprc $REPONAME
cp ~/.config/i3/* $REPONAME/i3
cp ~/.config/mpd/mpd.conf $REPONAME
cp ~/.config/mpv/mpv.conf $REPONAME
cp ~/.config/ncmpcpp/ncmpcpp.conf $REPONAME
cp ~/.config/neofetch/neofetch.conf $REPONAME
cp ~/.config/ranger/* $REPONAME
cp ~/.config/task/taskrc $REPONAME
cp ~/.config/transmission/settings.json $REPONAME