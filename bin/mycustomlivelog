--no-repeat -e "[Ee]rror" -I /var/log/Xorg.2.log \
--no-repeat -e "[Ee]rror" -I /var/log/auth.log \
--no-repeat -e "[Ee]rror" -I /var/log/daemon.log \
--no-repeat -e "[Ee]rror" -I /var/log/debug \
--no-repeat -e "[Ee]rror" -I /var/log/dmesg \
--no-repeat -e "[Ee]rror" -I /var/log/emerge.log \
--no-repeat -e "[Ee]rror" -I /var/log/kern.log \
--no-repeat -e "[Ee]rror" -I /var/log/lpr.log \
--no-repeat -e "[Ee]rror" -I /var/log/messages \
--no-repeat -e "[Ee]rror" -I /var/log/mpd \
--no-repeat -e "[Ee]rror" -I /var/log/syslog \
--no-repeat -e "[Ee]rror" -I /var/log/user.log \
--no-repeat -e "[Ee]rror" -I /var/log/wpa_supplicant.log \
--no-repeat -e "[Ee]rror" -I /var/log/portage/elog/summary.log
