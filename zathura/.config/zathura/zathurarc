# Use the color scheme generated by wal
include "/home/wegeee/.cache/wal/zathura"

# Font used
set font "Anonymice Nerd Font 9"
# Vertical scrollbar is displayed
set guioptions v 
# En/Disables incremental search (search while typing)
set incremental-search false
# Gap in pixels between each rendered page
set page-padding 1
# En/Disables recoloring
set recolor false
# Defines the X clipboard into which mouse-selected data will be written
set selection-clipboard clipboard
# Notification after selecting text
set selection-notification false
# Hidden files and directories displayed in completion
set show-hidden true
# Horizontal padding of the statusbar and notificationbar
set statusbar-h-padding 0
# Vertical padding of the statusbar and notificationbar
set statusbar-v-padding 0
# $HOME -> ~
set statusbar-home-tilde true

map u scroll half-up
map d scroll half-down
map P toggle_page_mode
map r reload
map R rotate
map w recolor